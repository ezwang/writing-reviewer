<h1>Essays</h1>
<h4><%= @assignment.title %> - <%= @assignment.description %></h4>

<table class="table">
  <thead>
    <tr>
      <th>Assignment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @essays.each do |essay| %>
      <tr>
        <td><%= essay.assignment %></td>
        <td><%= link_to 'Show', essay %></td>
        <td><%= link_to 'Edit', edit_essay_path(essay) %></td>
        <td><%= link_to 'Destroy', essay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Essay', new_assignment_essay_path, class: 'btn btn-success' %>
